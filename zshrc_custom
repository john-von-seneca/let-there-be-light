# fortune hacks
if [[ "$OSTYPE" = "linux-gnu" ]]; then
    CMD_SHUF=shuf
elif [[ "$OSTYPE" = "darwin"* ]]; then
    CMD_SHUF=gshuf
fi
#fortune -a | cowsay
fortune -a | fmt -80 -s | $($CMD_SHUF -n 1 -e cowsay cowthink) -$($CMD_SHUF -n 1 -e b d g p s t w y) -f $($CMD_SHUF -n 1 -e $(cowsay -l | tail -n +2)) -n



